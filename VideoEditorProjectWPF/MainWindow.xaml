<Window x:Class="VideoEditorProjectWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Editor" Height="600" Width="1000" Background="#F5F5F5" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="379*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Buttons -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="#5C6BC0" Height="50" Margin="0,5,0,0">
            <!-- Textbox for entering text -->
            <TextBox Name="TextToAdd" Width="300" Height="30" Margin="10,0,10,0" Background="#D1C4E9" Foreground="Black" BorderBrush="#8E24AA" BorderThickness="1"/>
            <Button Content="Chèn Chữ" Width="100" Height="30" Margin="10,0,10,0" Background="#66BB6A" Foreground="White" BorderBrush="#388E3C" BorderThickness="1" Click="AddTextToVideo_Click"/>
            <Button Content="Xóa Chữ" Width="100" Height="30" Margin="10,0,10,0" Background="#EF5350" Foreground="White" BorderBrush="#D32F2F" BorderThickness="1" Click="DeleteTextButton_Click"/>
        </StackPanel>

        <!-- Effects Button -->
        <Grid>
            <Button Content="Chỉnh sửa hiệu ứng" Click="OpenEffectWindow_Click" Height="30" Width="120" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,16,41,0" Background="#42A5F5" Foreground="White" BorderBrush="#1976D2" BorderThickness="1"/>
        </Grid>

        <!-- Container for Video and Text -->
        <Canvas Name="VideoCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0">
            <!-- Video Player -->
            <MediaElement Name="VideoPlayer" LoadedBehavior="Manual" Stretch="UniformToFill" Width="800" Height="400" Canvas.Left="70" Canvas.Top="73"/>
            <!-- TextBlock for Watermark (Initially Hidden) -->
            <TextBlock Name="WatermarkText" Text="Your Watermark" Foreground="White" FontSize="24" FontWeight="Bold" Visibility="Hidden"
               Canvas.Left="10" Canvas.Top="10" MouseLeftButtonDown="WatermarkText_MouseLeftButtonDown"/>
        </Canvas>

        <!-- Background Music Player (Hidden) -->
        <MediaElement Name="MusicPlayer" LoadedBehavior="Manual" Visibility="Hidden" Volume="0.5" Grid.RowSpan="2"/>

        <!-- Video Progress Bar -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="60,0,60,10">
            <TextBlock Name="CurrentTimeText" Text="0:00" Foreground="#00BFAE" VerticalAlignment="Center" Margin="5,0,0,0" Width="44"/>
            <Slider x:Name="VideoSlider" Minimum="0" Maximum="100" ValueChanged="VideoSlider_ValueChanged" Height="20" Width="758" Background="#80E27E" Foreground="White"/>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="#42A5F5" Height="50" Margin="0,5,0,0" Grid.Row="1">
            <Button Content="Mở Video" Width="80" Height="30" Margin="10,0,10,0" Background="#2196F3" Foreground="White" BorderBrush="#1976D2" BorderThickness="1" Click="OpenVideo_Click"/>
            <Button Content="▶️ Play" Width="70" Height="30" Margin="0,0,10,0" Background="#66BB6A" Foreground="White" BorderBrush="#388E3C" BorderThickness="1" Click="Play_Click"/>
            <Button Content="⏸ Pause" Width="70" Height="30" Margin="0,0,10,0" Background="#FFEB3B" Foreground="Black" BorderBrush="#FBC02D" BorderThickness="1" Click="Pause_Click"/>
            <Button Content="⏹ Stop" Width="70" Height="30" Margin="0,0,10,0" Background="#EF5350" Foreground="White" BorderBrush="#D32F2F" BorderThickness="1" Click="Stop_Click"/>
            <Button Content="Skip >>" Width="70" Height="30" Background="#FF9800" Foreground="White" BorderBrush="#F57C00" BorderThickness="1" Click="Skip_Click"/>

            <!-- Speed Selector -->
            <ComboBox Name="SpeedSelector" SelectionChanged="SpeedSelector_SelectionChanged" Width="80" Height="30" Margin="10,0,10,0" Background="#5C6BC0" Foreground="White">
                <ComboBoxItem Content="0.5x" Tag="0.5"/>
                <ComboBoxItem Content="1x" Tag="1.0" IsSelected="True"/>
                <ComboBoxItem Content="1.5x" Tag="1.5"/>
                <ComboBoxItem Content="2x" Tag="2.0"/>
            </ComboBox>

            <!-- Music List -->
            <ComboBox Name="MusicComboBox" Width="110" Height="30" SelectionChanged="MusicComboBox_SelectionChanged" Background="#5C6BC0" Foreground="White">
                <ComboBoxItem Content="Chọn nhạc nền" IsSelected="True"/>
            </ComboBox>

            <!-- Music Volume Slider -->
            <Label Content="volume" Height="30" Margin="10,0,0,0" Foreground="#FFEFE1E1"/>
            <Slider Name="MusicVolumeSlider" Minimum="0" Maximum="1" Value="0.5" Width="100" Height="27" Margin="0,8,10,0" ValueChanged="MusicVolumeSlider_ValueChanged" RenderTransformOrigin="0.53,1.367" Background="#616161" Foreground="White"/>
            <Button Content="🎵 Thêm Nhạc" Width="100" Height="30" Background="#FF9800" Foreground="White" BorderBrush="#F57C00" BorderThickness="1" Click="AddMusic_Click" Margin="5,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
